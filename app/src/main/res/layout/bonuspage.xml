<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_guessit"
    tools:context=".GameMain">

    <Button
        android:id="@+id/button11"
        android:layout_width="197dp"
        android:layout_height="51dp"
        android:text="Choose a bonus"
        android:textColorLink="@color/brownbuff"
        app:backgroundTint="@color/brownbuff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="395dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.455">

        <Button
            android:id="@+id/button12"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="    Ask Twice "
            android:textColorLink="@color/brownbuff"
            app:backgroundTint="@color/gray"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="162dp" />

        <Button
            android:id="@+id/button10"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Block Next Player"
            android:textColorLink="@color/brownbuff"
            android:visibility="visible"
            app:backgroundTint="@color/gray"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="89dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text=" Double Score"
            android:textColorLink="@color/brownbuff"
            app:backgroundTint="@color/gray"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>